<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:contentDescription="@string/car_registration_number"
                android:src="@drawable/empty_image"
                android:layout_marginVertical="10dp"
                android:scaleType="centerCrop"/>


            <TextView
                android:id="@+id/carBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/car_brand"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/car_model"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/car_registration_number"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">

                <Button
                    android:id="@+id/viewDetails"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/see_details"
                    android:textColor="#795548"
                    android:textStyle="bold"
                    app:cornerRadius="30dp"
                    android:layout_marginHorizontal="10dp"/>

                <Button
                    android:id="@+id/deleteCar"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_car"
                    android:textColor="#795548"
                    android:textStyle="bold"
                    app:cornerRadius="30dp"
                    />

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>